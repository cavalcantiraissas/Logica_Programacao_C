#include <stdio.h> 

int main(){

    float comprimento, largura, area;

    printf("Digite o Comprimento: \n");
    scanf("%f", &comprimento);

    printf("Digite a Largura: \n");
    scanf("%f", &largura);

    area = (comprimento*largura); 
    printf("Área = %.2f metros", area);

    return 0; 

}
