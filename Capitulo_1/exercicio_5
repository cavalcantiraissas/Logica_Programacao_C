#include <stdio.h>

int main (){

    float valor_antigo, desconto, novo_valor;

    printf("Digite o valor atual: \n");
    scanf("%f", &valor_antigo);

    printf("De quanto será o seu reajuste?\nConsidere um valor real. Ex: 15 = 0.15\n");
    scanf("%f", &desconto);

    novo_valor = valor_antigo - (valor_antigo*desconto); 

    printf("Novo salário: %.2f", novo_valor);

    return 0; 


}
