#include <stdio.h>

int main(){
    float vendas, comissao; 

    printf("Digite o número de vendas:\n");
    scanf("%f", &vendas);

    comissao = (vendas*0.10); 
    printf("Total de Vendas: %.2f \nComissão: R$ %.2f", vendas, comissao);

    return 0; 
}
